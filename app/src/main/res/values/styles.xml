<resources>

    <style name="MyTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:activatedBackgroundIndicator">@drawable/item_nav_background</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary_red</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#8A1700</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:preferenceCategoryStyle">@style/UserPreferenceCategoryStyle</item>
    </style>

    <style name="UserPreferenceCategoryStyle" parent="UserPreferenceCategoryStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#00D4FF</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Holo.Spinner">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

</resources>
