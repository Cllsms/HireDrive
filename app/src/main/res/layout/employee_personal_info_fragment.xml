<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Personal Information"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"
                android:background="@color/primary_red"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/EmployeeInfoPrev"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:src="@drawable/ic_chevron_left_white_48dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/EmployeeInfoNext"
                android:layout_gravity="right"
                android:src="@drawable/ic_chevron_right_white_48dp"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_weight="1"
            android:id="@+id/EmployeeInfoLastNameET"
            android:inputType="textCapWords"
            android:hint="Last Name"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_weight="1"
            android:id="@+id/EmployeeInfoFirstNameET"
            android:inputType="textCapWords"
            android:hint="First Name"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:layout_weight=".5"
                android:maxLength="2"
                android:id="@+id/EmployeeInfoMIET"
                android:inputType="textCapWords"
                android:hint="MI"/>
        </LinearLayout>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:id="@+id/EmployeeInfoAddress1ET"
            android:inputType="textCapWords"
            android:hint="Address 1 "/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:id="@+id/EmployeeInfoAddress2ET"
            android:inputType="textCapWords"
            android:hint="Address 2"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:id="@+id/EmployeeInfoCityET"
                android:inputType="textCapWords"
                android:hint="City"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/EmployeeInfoStateET"
                android:inputType="textCapWords"
                android:hint="State"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/EmployeeInfoZipET"
                android:inputType="textCapWords"
                android:hint="Zip"/>

        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:id="@+id/EmployeeInfoPhoneET"
            android:inputType="phone"
            android:hint="Home Phone"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:id="@+id/EmployeeInfoPhoneAltET"
            android:inputType="phone"
            android:hint="Alternate Phone"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:id="@+id/EmployeeInfoEmailET"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:id="@+id/EmployeeInfoSSET"
            android:inputType="number"
            android:hint="Social Security Number"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@+id/EmployeeInfoBirthday"
            android:hint="Tap to Select Birth Day"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Marital Status"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:id="@+id/EmployeeInfoMaritalStatus"
                android:entries="@array/maritalstatus"
                style="@android:style/Widget.Holo.Spinner"/>
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:id="@+id/EmployeeInfoSpouseName"
            android:inputType="number"
            android:hint="Spouse's Name"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <Switch
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textOn="YES"
                android:textOff="NO"
                android:id="@+id/EmployeeInfoUSVeteran"
                android:paddingRight="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="U.S. Veteran"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textOn="YES"
                android:textOff="NO"
                android:id="@+id/EmployeeInfoUSCitizen"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="U.S. Citizen"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>