<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Emergency Contact Information"
            android:padding="5dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:background="@color/primary_red"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EmergencyContactInfoPrev"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_left_white_48dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:id="@+id/EmergencyContactInfoNext"
            android:visibility="gone"
            android:layout_gravity="right"
            android:src="@drawable/ic_chevron_right_white_48dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_weight="1"
            android:id="@+id/EmployeeInfoLastNameET"
            android:inputType="textCapWords"
            android:hint="Last Name"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_weight="1"
            android:id="@+id/EmployeeInfoFirstNameET"
            android:inputType="textCapWords"
            android:hint="First Name"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_weight=".5"
            android:maxLength="2"
            android:id="@+id/EmployeeInfoMIET"
            android:inputType="textCapWords"
            android:hint="MI"/>
    </LinearLayout>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:id="@+id/EmployeeInfoPhoneET"
        android:inputType="phone"
        android:hint="Primary Phone"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:id="@+id/EmployeeInfoPhoneAltET"
        android:inputType="phone"
        android:hint="Alternate Phone"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:id="@+id/EmployeeInfoRelationshiptET"
        android:inputType="phone"
        android:hint="Relationship"/>
</LinearLayout>