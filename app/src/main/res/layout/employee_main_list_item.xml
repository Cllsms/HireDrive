<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:id="@+id/taskCompleted"
        android:src="@drawable/ic_check_circle_white_48dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/taskDescription"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:drawableEnd="@drawable/ic_chevron_right_white_48dp"
        android:drawableRight="@drawable/ic_chevron_right_white_48dp"
        android:text="Signed Employee Manual"/>


</LinearLayout>